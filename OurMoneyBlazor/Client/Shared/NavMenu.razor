        </MatNavSubMenuList>
    </MatNavSubMenu>

    <MatNavSubMenu>
        <MatNavSubMenuHeader>
            <MatNavItem>
                <MatIcon Icon="folder" />Другое
            </MatNavItem>
        </MatNavSubMenuHeader>

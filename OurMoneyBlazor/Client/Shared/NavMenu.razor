            <MatNavItem>
                <MatIcon Icon="folder" />Справочники
            </MatNavItem>
        </MatNavSubMenuHeader>
        <MatNavSubMenuList>
            <MatNavItem>Категории затрат</MatNavItem>
            <MatNavItem>Источники доходов</MatNavItem>
            <MatNavItem>Места хранения (счета)</MatNavItem>
